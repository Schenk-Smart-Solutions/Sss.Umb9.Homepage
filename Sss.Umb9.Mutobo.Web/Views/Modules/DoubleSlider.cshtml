
@model Sss.Umb9.Mutobo.Modules.DoubleSliderComponent





<div>


    <m-carousel navigation loop height="@(Model.Height != null ? $"{Model.Height}px" : "auto")" namespace="carousel-" interval="@(Model.Interval.HasValue && Model.Interval > 0 ? Model.Interval : 5000)" sync-id="@Model.Key">
        @foreach (var slide in Model.Slides)
        {
            if (slide.Image != null)
            {
                <a-picture defaultsource="@slide.Image.DefaultSource.Src" sources="@slide.Image.GetSourcesAsJSON()"></a-picture>
            }

        }
    </m-carousel>


    <m-carousel loop height="auto" namespace="carousel-" sync-id="@Model.Key" disable-drag>
        <style>
            :host > ma-carousel > div.text {
                align-items: start;
            }

                :host > m-carousel > div.text > div {
                    text-align: center;
                    width: var(--content-width-not-web-component, 80%);
                }

                    :host > m-carousel > div.text > div p {
                        text-align: var(--p-text-align);
                    }

            @@media only screen and (max-width:600px) {
                :host > m-carousel > div.text > div {
                    width: var(--content-width-not-web-component-mobile, 90%);
                }
            }
        </style>


        @foreach (var slide in Model.Slides)
        {
            <div class="text">
                <div>
                    <h3>@slide.Title</h3>
                    <p>
                        @slide.Text

                    </p>
                    @if (slide.Link != null)
                    {
                        <a href="@(slide.Link?.Url ?? "#")" target="@(slide.Link?.Target ?? string.Empty)">Mehr erfahren</a>
                    }
                </div>
            </div>
        }
    </m-carousel>
</div>